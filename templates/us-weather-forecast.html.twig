{#
/**
 * @file
 * Template for the Weather Forecast field formatter.
 *
 * Available variables:
 * - city: City name.
 * - timezone: Timezone of the city.
 * - forecast_list: array of weather forecast list.
 */
#}
<div class="us-weather-forecast-container">
  <h2 class="weather-location">Forecast for {{ city }}, US</h2>
  <div class="weather-description">Hourly forecast for next days.</div>
  <div class="weather-forecast">
    {% for list in forecast_list %}
      <h2>{{ list.dt | date("F d - ga", timezone) }}</h2>
    
      {% if (list.weather.0.icon) %}
        <div class="icon">
          <img src="http://openweathermap.org/img/wn/{{ list.weather.0.icon }}@2x.png" alt="" width="80">
        </div>        
      {% endif %}

      {% if (list.weather.0.description) %}
        <div class="description">
          {{ list.weather.0.description }}
        </div>
      {% endif %}

      {% if (list.main.temp) %}
        <div class="temperature">
          Temperature: {{ list.main.temp|round }}Â°F
        </div>
      {% endif %}
    
      {% if (list.main.humidity) %}
        <div class="humidity">
          Humidity: {{ list.main.humidity }}%
        </div>
      {% endif %}
    
      {% if (list.main.pressure) %}
        <div class="pressure">
          Pressure: {{ list.main.pressure }} hPa
        </div>
      {% endif %}
        
      {% if (list.wind.speed) %}
        <div class="wind-speed">
          Wind speed: {{ list.wind.speed }}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>